<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/personRelative"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/personLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/cooker" />
    </RelativeLayout>

    <EditText
        android:id="@+id/personEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/whitedit"
        android:padding="10dp"
        android:textColor="@color/Grey"
        android:textColorHint="@color/Grey"
        android:textSize="15sp"
        android:visibility="gone" />

    <RadioGroup
        android:id="@+id/personRadio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男" />

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/personPick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">


        <TextView
            android:id="@+id/OldText"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:text="18"
            android:textColor="@color/Red"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <NumberPicker
                android:id="@+id/numberPicker1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="年"
                android:textColor="@color/Black"
                android:textSize="15sp" />

            <NumberPicker
                android:id="@+id/numberPicker2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="月"
                android:textColor="@color/Black"
                android:textSize="15sp" />

            <NumberPicker
                android:id="@+id/numberPicker3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="日"
                android:textColor="@color/Black"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>