<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/loginLinear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/load_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/head" />

        <!--<include layout="@layout/logindrop" />-->

        <EditText
            android:id="@+id/load_edit1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edit"
            android:hint="请输入你的账号/手机号"
            android:inputType="text"
            android:padding="15dp"
            android:singleLine="true"
            android:textColor="@color/Red"
            android:textColorHint="@color/Grey"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/loginLinear1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/loginLinear"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/load_image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/password" />

        <EditText
            android:id="@+id/load_edit2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edit"
            android:hint="请输入你的密码"
            android:inputType="textPassword"
            android:padding="15dp"
            android:singleLine="true"
            android:textColor="@color/Red"
            android:textColorHint="@color/Grey"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/load_but"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginLinear1"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_down_red"
        android:clickable="false"
        android:enabled="false"
        android:gravity="center"
        android:padding="5dp"
        android:text="登录"
        android:textColor="@color/White"
        android:textSize="18sp" />


